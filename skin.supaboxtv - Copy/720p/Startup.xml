<window>
	<defaultcontrol always="true">10</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<controls>
		<control type="button" id="10">
			<description>trigger</description>
			<onfocus>ReplaceWindow(Home)</onfocus>
			<texturenofocus>-</texturenofocus>
			<texturefocus>-</texturefocus>
			<visible>!Skin.HasSetting(Use_Startup_Playlist)</visible>
		</control>
		<control type="button" id="10">
			<description>trigger with startup Playlist</description>
			<onfocus>XBMC.PlayMedia($INFO[Skin.String(Startup_Playlist_Path)])</onfocus>
			<onfocus>ReplaceWindow(Home)</onfocus>
			<texturenofocus>-</texturenofocus>
			<texturefocus>-</texturefocus>
			<visible>Skin.HasSetting(Use_Startup_Playlist)</visible>
		</control>
		<include>CommonBackground</include>
	</controls>
	<onload condition="!Skin.HasSetting(Background_color)">Skin.SetString(Background_color,ff0062db)</onload>
	<onload condition="!Skin.HasSetting(Logo_color)">Skin.SetString(Logo_color,FFFFFFFF)</onload>
	<onload condition="!Skin.HasSetting(Focus_color)">Skin.SetString(Focus_color,ff4244ff)</onload>
	<onload condition="!Skin.HasSetting(MainMenuText_color)">Skin.SetString(MainMenuText_color,ff004aff)</onload>
	<onload condition="!Skin.HasSetting(FocusedMenuText_color)">Skin.SetString(FocusedMenuText_color,ff0082d5)</onload>
	<onload condition="!Skin.HasSetting(HomeFloor_color)">Skin.SetString(HomeFloor_color,FFD1D1D1)</onload>
	<onload condition="!Skin.HasSetting(HomeBackground_color)">Skin.SetString(HomeBackground_color,FFD1D1D1)</onload>
	<onload condition="!Skin.HasSetting(ClockFace_color)">Skin.SetString(ClockFace_color,FFe6edff)</onload>
	<onload condition="!Skin.HasSetting(ClockHands_color)">Skin.SetString(ClockHands_color,FF3c40ff)</onload>
	<onload>Skin.SetBool(Background_color)</onload>
	<onload>Skin.SetBool(Logo_color)</onload>
	<onload>Skin.SetBool(Focus_color)</onload>
	<onload>Skin.SetBool(MainMenuText_color)</onload>
	<onload>Skin.SetBool(FocusedMenuText_color)</onload>
	<onload>Skin.SetBool(HomeFloor_color)</onload>
	<onload>Skin.SetBool(HomeBackground_color)</onload>
	<onload>Skin.SetBool(ClockFace_color)</onload>
	<onload>Skin.SetBool(ClockHands_color)</onload>
	<onload>Skin.SetString(sunfly_search,True)</onload>
	<onload>Skin.SetBool(sunfly_search,True)</onload>
	<onload>Skin.SetString(youtube_search,True)</onload>
	<onload>Skin.SetBool(youtube_search,True)</onload>
	<onload>Skin.SetString(xunityT_search,True)</onload>
	<onload>Skin.SetBool(xunityT_search,True)</onload>
	<onload>Skin.SetString(xunityM_search,True)</onload>
	<onload>Skin.SetBool(xunityM_search,True)</onload>
	<onload>Skin.SetString(sfnumber_search,True)</onload>
	<onload>Skin.SetBool(sfnumber_search,True)</onload>
</window>